<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rock.vmovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".VMovieApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.activity.MainActivity" />
        <activity android:name=".ui.main.activity.GuideActivity" />
        <activity android:name=".ui.login.activity.LoginActivity" />
        <activity android:name=".ui.seriesdetail.activity.SeriesDetailActivity" />
        <activity android:name=".ui.search.activity.SearchActivity" />
        <activity android:name=".ui.cache.activity.CacheActivity" />
        <activity android:name=".ui.set.activity.SetActivity" />
        <activity android:name=".ui.channeldetail.activity.ChannelDetailActivity" />
        <activity android:name=".ui.moviedetail.activity.MovieDetailActivity"></activity>
    </application>

</manifest>