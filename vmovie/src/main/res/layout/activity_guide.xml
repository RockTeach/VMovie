<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rock.vmovie.ui.main.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/teach_guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.rock.teachlibrary.widget.circleindicator.CircleIndicator
        android:id="@+id/teach_guide_indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        app:ci_background="@color/color_gray_9"
        app:ci_selected_background="@color/color_white"/>

</FrameLayout>
