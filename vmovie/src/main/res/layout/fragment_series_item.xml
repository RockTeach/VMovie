<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/teach_series_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/teach_series_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="电影自习室"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/teach_series_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_9"
            android:layout_marginTop="10dp"
            android:text="已更新85集 92535人已订阅"
            android:textSize="12sp"
            android:layout_below="@id/teach_series_title"/>

        <CheckBox
            android:id="@+id/teach_series_subscribe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@drawable/series_subscribe_selector"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/teach_series_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/color_black"
        android:lines="2"/>

</LinearLayout>