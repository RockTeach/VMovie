<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/teach_movie_detail_header_back"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        android:src="@mipmap/back_icon" />


    <ImageView
        android:id="@+id/teach_movie_detail_header_share"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:src="@mipmap/video_lan_share" />


    <FrameLayout
        android:id="@+id/teach_movie_detail_header_control"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <CheckBox
            android:id="@+id/teach_movie_detail_header_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/video_lan_play" />

        <LinearLayout
            android:id="@+id/teach_movie_detail_header_video_bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/teach_movie_detail_header_video_current"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/color_gray_d" />

            <SeekBar
                android:id="@+id/teach_movie_detail_header_video_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/teach_movie_detail_header_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/color_gray_d" />

            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/teach_movie_detail_header_video_full_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/video_lan_full_screen" />

        </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/teach_movie_detail_header_video_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>

